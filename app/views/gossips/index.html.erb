<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center page-title">Derniers potins</h1>
    </div>
  </div>
  <div class="row">
    <% @gossips.each do |gossip| %>
      <div class="col-md-12">
        <div class="card gossip-card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to gossip.title, gossip %></h5>
            <p class="card-text"><%= gossip.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
